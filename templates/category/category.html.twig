{% extends 'base.html.twig' %}

{% block title %}Recetas {{name_category}} 
{% endblock %}

{% block body %}
	<body class="bg-beige">
		<div class="d-flex w-100 flex-wrap pt-4 justify-content-center">
			{% if no_recipes %}
				<div class="p-4">
					<img class="p-4" src="../build/images/no_plate.svg">
					<h5 class="text-center">{{ no_recipes}} {{name_category}}</h5>
				</div>
			{% else %}
				{% for recipe in recipes %}
					<div class="card m-4 w-25">
						<img src="../uploads/images/{{recipe.image}}" class="card-img-top fit">
						<div class="card-body">
							<h5 class="card-title text-center">
								{{recipe.title |capitalize}}
							</h5>
							<div class="d-flex text-center justify-content-center p-2">
								<img class ="ml-2" style="height: 15px" src="../build/images/star.svg">

								<p class="lh-1 ps-2">4.5</p>
							</div>

							<a href="{{path('recipe_show', {'title': recipe.title })}}" class="d-flex justify-content-center text-decoration-none ">
								<button type="button" class="button-steelblue btn-sm">Ver m√°s</button>

							</a>
						</div>
					</div>
				{% endfor %}
			{% endif %}

		</div>
	</body>
{% endblock %}

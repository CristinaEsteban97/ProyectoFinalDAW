{% extends 'base.html.twig' %}

{% block title %}Receta{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ recipe.image }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Score</th>
                <td>{{ recipe.score }}</td>
            </tr>
            <tr>
                <th>Visible</th>
                <td>{{ recipe.visible ? 'Yes' : 'No' }}</td>
            </tr>


        </tbody>
    </table>

{% endblock %}

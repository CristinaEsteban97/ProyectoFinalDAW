<!DOCTYPE html>
<html>
	<head>
		{% block head %}
			<meta charset="UTF-8">
			<title>
				{% block title %}Welcome!
				{% endblock %}
			</title>
			{% block stylesheets %}
				{#{{ encore_entry_link_tags('app') }}#}
				<link rel="stylesheet" href="{{ asset('build/app.css')}}">
				<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
				<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
				<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
			{% endblock %}

			{% block javascripts %}
				{#{{ encore_entry_script_tags('app') }}#}
			{% endblock %}
		{% endblock %}
		<body>
			{% block header %}
				<header class="fixed-top">
					<nav class="navbar bg-white navbar-inverse">
						<div class="container-fluid">
							<div class="navbar-header bg-white d-flex">
								<a class="navbar-brand" href="#">NombreApp</a>
								<a class="text-decoration-none padding-06 me-3" href="{{path("recipes")}}">Recetas</a>
								{% if is_granted('ROLE_USER')%}
									<a class="text-decoration-none padding-06 me-3" href="{{path("recipe_new")}}">Subir receta</a>
								{%- endif %}
							</div>
							<ul class="d-flex flex-row nav navbar-nav navbar-right">
								<li class="mx-4">
									<a class="button button-navbar border rounded-pill text-decoration-none p-2 mr-2" href="{{ path("register")}}">Registrarse</a>
								</li>
								<li class="me-4">
									<a class="button button-navbar border rounded-pill text-decoration-none p-2" href="{{ path("login")}}">Iniciar sesi√≥n</a>
								</li>
							</ul>
						</div>

					</nav>
				</header>
			{% endblock %}
			{% block body %}{% endblock %}
		</body>
	</head>
</html>

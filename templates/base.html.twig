<!DOCTYPE html>
<html>
	<head>
		{% block head %}
			<meta charset="UTF-8">
			<title>
				{% block title %}Welcome!
				{% endblock %}
			</title>
			{% block stylesheets %}
				{#{{ encore_entry_link_tags('app') }}#}
				<link rel="stylesheet" href="{{ asset('build/app.css')}}">
				<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
				<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
			{% endblock %}

			{% block javascripts %}
				{#{{ encore_entry_script_tags('app') }}#}
			{% endblock %}
		{% endblock %}
		<body>
			{% block header %}
				{% if app.request.get('_route') == 'home' or  app.request.get('_route') == 'login' or app.request.get('_route') == 'register' %}
					<header class="fixed-top">
					{% else %}
						<header>
						{% endif %}
						<nav class="navbar bg-white navbar-inverse">
							<div class="container-fluid">
								<div class="navbar-header bg-white d-flex">
									<a class="navbar-brand" href="{{path("home")}}">NombreApp</a>
									<a class="text-decoration-none padding-06 me-3" href="{{path("explorer")}}">Explora</a>
									{% if is_granted('ROLE_USER')%}
										<a class="text-decoration-none padding-06 me-3" href="{{path("recipe_new")}}">Subir receta</a>
									{%- endif %}
								</div>
								<ul class="d-flex flex-row nav navbar-nav navbar-right">
									{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
										<li class="mx-4">
											<a class="button button-navbar border rounded-pill text-decoration-none p-2 mr-2">¡Hola
												{{ app.user.username }}!</a>
										</li>
										<li class="mx-2">
											<a class="button button-navbar border rounded-pill text-decoration-none p-2" href="{{ path("app_logout")}}">Cerrar sesion</a>
										</li>
									{%- else %}
										<li class="mx-4">
											<a class="button button-navbar border rounded-pill text-decoration-none p-2 mr-2" href="{{ path("register")}}">Registrarse</a>
										</li>
										<li class="mx-2">
											<a class="button button-navbar border rounded-pill text-decoration-none p-2 mr-2" href="{{ path("login")}}">Iniciar sesión</a>
										</li>
									{%- endif %}
								</ul>
							</div>
						</nav>
					</header>
				{% endblock %}
				{% block body %}{% endblock %}
			</body>
		</body>
	</head>
</html></body></head></html></body></body></head></html>

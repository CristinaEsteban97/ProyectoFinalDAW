{% extends 'base.html.twig' %}

{% block title %}Registro
{% endblock %}

{% block body %}
	<body class="overflow-hidden">
		<video playsinline autoplay muted loop poster="build/images/video4.mp4" id="bgvid">
			<source src="build/images/video4.mp4" type="video/mp4">
		</video>
		<div class="content pt-4">
			<div class="content1 pt-4">
			 {% form_theme form 'errors_form.html.twig' %}
				{{ form_start(form, { 'attr' : { 'class': 'content2 p-4 rounded' } }) }}
				<h1 class="h3 mb-3 font-weight-normal text-center">Registro</h1>
				{{ form_label(form.username) }}
				{{ form_widget(form.username, { 'attr' : { 'class': 'd-block mb-3 form-control mt-3' }}) }}
				{{ form_errors(form.username) }}
				{{ form_label(form.email) }}
				{{ form_widget(form.email, { 'attr' : { 'class': 'd-block mb-3 form-control mt-3' }}) }}
				{{ form_errors(form.email) }}
				{% for passwordField in form.password %}
					{{ form_label(passwordField) }}
					{{ form_widget(passwordField, { 'attr': {'class': 'd-block mb-3 form-control mt-3'} }) }}
					{{ form_errors(passwordField) }}
				{% endfor %}
				<button tye="submit" class="button-steelblue btn-sm btn-sm mt-3">Registrarse</button>
				{{ form_end(form) }}
			</div>
		</div>
	</body>
{% endblock %}
